#!/usr/bin/env bash

### Used by: build.uml linux32 build
### TODO: check - maybe it will not be used any more in uv build

set -e
MY_VERBOSITY_LOG_LEVEL=${MY_VERBOSITY_LOG_LEVEL:'1'}  # Default level is 1 (INFO)
if [[ "$MY_VERBOSITY_LOG_LEVEL" -ge 2 ]]; then
    set -x
fi


uname -a
python3 --version
python3 -m pip --version
python3 -m pip debug

python3 -m venv virtualenv
source virtualenv/bin/activate

virtualenv/bin/pip debug
virtualenv/bin/pip install pycairo
virtualenv/bin/pip install PyGObject==3.50.0

virtualenv/bin/pip install wxPython
# install geos for shapely
virtualenv/bin/pip install -v shapely

virtualenv/bin/pip install -r requirements.txt

# for networkx
virtualenv/bin/pip install pandas

virtualenv/bin/pip install pyinstaller

deactivate
