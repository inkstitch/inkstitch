<?xml version="1.0" encoding="UTF-8"?>
<inkscape-extension translationdomain="inkstitch" xmlns="http://www.inkscape.org/namespace/inkscape/extension">
    <name>Design Library</name>
    <id>org.{{ id_inkstitch }}.design_library</id>
    <param name="extension" type="string" gui-hidden="true">design_library</param>

    <param name="notebook" type="notebook">
        <page name="designs" gui-text="Designs">
            <param name="category" type="optiongroup" appearance="combo" gui-text="Category">
                <option value="all">All Designs</option>
                <option value="flowers">Flowers</option>
                <option value="shapes">Shapes</option>
                <option value="borders">Borders</option>
                <option value="motifs">Motifs</option>
            </param>

            <param name="design_name" type="string" gui-text="Design name">flower_simple</param>

            <spacer />
            <label>Available designs:</label>
            <label>- flower_simple</label>
            <label>- star</label>
            <label>- heart</label>
            <spacer />
            <label>Enter the design name above to insert it.</label>
        </page>

        <page name="info" gui-text="Help">
            <label>The Design Library contains pre-made embroidery designs.</label>
            <spacer />
            <label>To insert a design:</label>
            <label>1. Select a category</label>
            <label>2. Enter the design name</label>
            <label>3. Click Apply</label>
            <spacer />
            <label>Designs are inserted at the current layer.</label>
            <spacer />
            <label>You can add your own designs to:</label>
            <label>inkstitch/designs/library/</label>
        </page>
    </param>

    <effect>
        <object-type>all</object-type>
        <menu-tip>Browse and insert designs from library</menu-tip>
        <effects-menu>
            <submenu name="{{ menu_inkstitch }}" translatable="no">
                <submenu name="Tools: Fill" />
            </submenu>
        </effects-menu>
    </effect>
    <script>
        {{ command_tag | safe }}
    </script>
</inkscape-extension>
